<!DOCTYPE html>
<html>

<head>
  <%- include('header') %>
    <link rel="stylesheet" href="css/login.css">
    <link rel="stylesheet" href="css/notification.css">
</head>

<body>
  <%- include('./components/notification') %>
    <div id="myTabs">
      <!-- Nav tabs -->
      <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active">
          <a href="#admin" aria-controls="admin" role="tab" data-toggle="tab">管理员登陆</a>
        </li>
        <li role="presentation">
          <a href="#judge" aria-controls="judge" role="tab" data-toggle="tab">裁判登陆</a>
        </li>
        <li role="presentation">
          <a href="#viewer" aria-controls="viewer" role="tab" data-toggle="tab">观众登陆</a>
        </li>
      </ul>
      <!-- Tab panes -->
      <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="admin">
          <form method="POST">
            <div class="form-group">
              <label>账号:</label>
              <input class="form-control" type="text" name="name">
            </div>
            <div class="form-group">
              <label>密码:</label>
              <input class="form-control" type="text" name="password">
            </div>
            <div class="form-group">
              <input type="submit" class="btn btn-primary" value="登录">
              <input type="text" class="hidden" name="role" value="admin">
            </div>
          </form>
        </div>
        <div role="tabpanel" class="tab-pane" id="judge">
          <form method="POST">
            <div class="form-group">
              <label>手机号:</label>
              <input class="form-control" type="text" name="phonenumber">
            </div>
            <div class="form-group">
              <input type="submit" class="btn btn-primary" value="登录">
              <input type="text" class="hidden" name="role" value="judge">
            </div>
          </form>
        </div>
        <div role="tabpanel" class="tab-pane" id="viewer">
          <form method="POST">
            <div class="form-group">
              <h3 class="text-primary text-center">欢迎你的登陆</h3>
            </div>
            <div class="form-group">
              <input type="submit" class="btn btn-primary" value="登录">
              <input type="text" class="hidden" name="role" value="viewer">
            </div>
          </form>
        </div>
      </div>
    </div>

    <%- include('footer') %>